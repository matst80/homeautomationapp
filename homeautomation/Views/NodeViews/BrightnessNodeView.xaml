<?xml version="1.0" encoding="UTF-8"?>
<local:BaseNodeContentView
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    xmlns:local="clr-namespace:homeautomation.Views"
    x:Class="homeautomation.Views.NodeViews.BrightnessNodeView">
    <ContentView.Content>
        
            <StackLayout HorizontalOptions="FillAndExpand" BackgroundColor="Transparent">
                <Label Text="{Binding Name}" TextColor="#333" FontSize="14" />
                <Label Text="{Binding Description}" TextColor="#888" FontSize="11" />
                <Slider Value="{Binding Brightness}" ValueChanged="Handle_ValueChanged" x:Name="sliderBrightness" Minimum="0" Maximum="255" />
            </StackLayout>

        
    </ContentView.Content>
</local:BaseNodeContentView>
