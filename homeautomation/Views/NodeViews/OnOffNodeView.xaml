<?xml version="1.0" encoding="UTF-8"?>
<local:BaseNodeContentView
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    xmlns:local="clr-namespace:homeautomation.Views"
    x:Class="homeautomation.Views.NodeViews.OnOffNodeView">
	<ContentView.Content>
       
            <StackLayout HorizontalOptions="FillAndExpand" BackgroundColor="Transparent">
                <Label Text="{Binding Name}" TextColor="#333" FontSize="14" />
                <Label Text="{Binding Description}" TextColor="#888" FontSize="11" />
                <Button FontFamily="FontAwesome" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" FontSize="28" Text="&#xf011;" x:Name="bOn" TextColor="{Binding CurrentColor}" Clicked="Handle_Clicked" />
      
            </StackLayout>

	</ContentView.Content>
</local:BaseNodeContentView>
